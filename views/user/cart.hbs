
<div class="container mt-5">
    
    <h2 style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">MY CART</h2>
    <div class="wrapper wrapper-content animated fadeInRight pt-5">
    <div class="row">
        <div class="col-md-9">
            <div class="ibox">
                <div class="ibox-title">
                    <span class="pull-right">(<strong>{{cartCount}}</strong>) items</span>
                    <h5>Items in your cart</h5>
                </div>
                {{#each product}}
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table shoping-cart-table">
                            <tbody>
                            <tr>
                                
                                <td width="90">
                                    <div class="cart-product-imitation">
                                        <img style="width: 80px; height: 
                                        80px;box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 4px, rgba(0, 0, 0, 0.3) 0px 7px 13px -3px, rgba(0, 0, 0, 0.2) 0px -3px 0px inset;" 
                                        src="{{this.product.image.[0]}}" alt="">
                                    </div>
                                </td>
                                <td class="desc">
                                    <h3>
                                    <a href="#" class="text-navy">
                                        
                                       {{this.product.game}}
                                    </a>
                                    </h3>
                                   {{!--  <p class="small">
                                        It is a long established fact that a reader will be distracted by the readable
                                        content of a page when looking at its layout. The point of using Lorem Ipsum is
                                    </p> --}}
                                    <dl class="small m-b-none">
                                        <dt>{{this.product.developers}}</dt>
                                        <dd>A description list is perfect for defining terms.</dd>
                                    </dl>
                                    

                                    <div class="m-t-sm">
                                        <a style="text-decoration: none;" href="#" class="text-muted"><i class="fa fa-heart"></i> Add to Wishlist</a>
                                        |
                                        {{!-- <a style="text-decoration: none;" href="/remove-from-cart/{{this.product._id}}" onclick="return confirm('ARE YOU WANT TO REMOVE {{this.product.game}} FROM THE CART?')" class="text-muted"><i class="fa fa-trash"></i> Remove item</a> --}}
                                        <button style="border: none;background: none;" class="text-muted" onclick="removeFromCart('{{this.product._id}}')"><i class="fa fa-trash"></i> Remove item</button>
                                    </div>
                                </td>

                                <td>
                                    ₹{{this.product.offerPrice}}
                                    <s class="small text-muted">₹{{this.product.actualPrice}}</s>
                                </td>
                                
                                <td width="65">

                                    {{!-- quantity --}}
                                    
                                    <button style="background-color: #e7eaec00; width: 50px; border-color: #e7eaec00;" id="plus{{this.product._id}}" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../usern}}','{{this.product.stock}}',1)">+</button>
                                    <input type="number" id="{{this.product._id}}" min="1" name="quantity" class="form-control" value="{{this.quantity}}">
                                    <button style="background-color: #e7eaec00;width: 50px;border-color: #e7eaec00;" id="minus{{this.product._id}}" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../usern}}','{{this.product.stock}}',-1)">-</button>
                                    
                                    {{!-- /quantity --}}
                                </td>
                                
{{!--                                 <td>
                                    <h4>
                                        {{this.quantity}}*{{this.product.offerPrice}}
                                    </h4>
                                </td>
 --}}                            </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                {{/each}}
            
                <div class="ibox-content">
                    {{!-- <button class="btn btn-primary pull-right"><i class="fa fa fa-shopping-cart"></i> Place order</button> --}}
                    <a class="btn btn-primary pull-right" href="/checkout"><i class="fa fa fa-shopping-cart"></i> Place order</a>
                    <a href="/" style="text-decoration: none; color: black;"><i class="fa fa-arrow-left"></i> Continue shopping</a>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="ibox" style="box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;">
                
                <div class="ibox-title">
                    <h5>Cart Summary</h5>
                </div>
                <div class="ibox-content">
                    <span>
                        Total
                    </span>
                    <span class="d-flex">
                        <h2>₹</h2>
                    <h2 class="font-bold" id="total">
                        {{totalAmount}}
                    </h2>
                    </span>

                    <hr>
                    <span class="text-muted small">
                        *For United States, France and Germany applicable sales tax will be applied
                    </span>
                    <div class="m-t-sm">
                        <div class="btn-group">
                        <a href="/checkout" class="btn btn-primary btn-sm"><i class="fa fa-shopping-cart"></i> Checkout</a>
                        <a href="#" class="btn btn-white btn-sm"> Cancel</a>
                        </div>
                    </div>
                    
                </div>
            </div>

        
            {{!-- <div class="ibox">
                <div class="ibox-content">

                    <p class="font-bold">
