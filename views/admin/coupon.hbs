 <div class="container" style="padding-left:150px;">
        
        {{!-- <div class="d-flex align-items-center mb-4">
            <div class="text-decor h6">Offers</div>
        </div> --}}

        <div class="me-3 w-100">
            <button class="btn btn-dark mt-5" data-bs-toggle="modal" data-bs-target="#add-coupons">
                <i class="fas fa-plus me-3"></i>
                Add Coupons
            </button>
            <table class="table table-striped mt-3" id="category-offer">
                <thead>
                    <tr>
                        <th>Coupons</th>
                        <th>offer %</th>
                        <th>minimum Price</th>
                        <th>Expiry Date</th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each coupons}}
                    <tr id="{{this._id}}">
                        <td>{{this.coupon}}</td>
                        <td>{{this.percentage}}</td>
                        <td>{{this.minimumPrice}}</td>
                        <td>{{this.expirydate}}</td>
                        <td style="font-size: 16px;">
                            {{!-- <a class="me-3" onclick="editCategoryOffer()"><i class="fas fa-pen-square"
                                    style="color: blue;"></i></a> --}}
                            <button style="border: none; background: none;" onclick="deleteCoupon('{{this._id}}')"><i class="fa fa-trash"
                                    style="color: red;"></i></button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="modal fade" id="add-coupons" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="add-coupons-Label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="order-md-1">
                            <h4 class="mb-3">Add Coupons</h4>

                            <form class="needs-validation" method="post" id="add-coupon-form">
                                <div class="mb-3">
                                    <input type="text" class="form-control bg-light" id="coupon-code"
                                        placeholder="Enter coupon code" name="coupon" value="" required="">
                                    <div class="invalid-feedback"> Please enter coupon code. </div>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control bg-light" id="coupon-percentage"
                                        placeholder="Enter coupon offer in %" name="percentage" value="" required="">
                                    <div class="invalid-feedback"> Please enter coupon offer. </div>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control bg-light" id="coupon-minimumOffer"
                                        placeholder="Enter minimum price for this coupon" name="minimumPrice" value=""
                                        required="">
                                    <div class="invalid-feedback"> Please enter minimum price. </div>
                                </div>
                                <div class="mb-3">
                                    <label for="coupon-expirydate">Expiry Date</label>
                                    <input type="date" class="form-control bg-light" id="coupon-expirydate"
                                        placeholder="expirydate" name="expirydate" value="" required="">
                                    <div class="invalid-feedback"> Please enter expirydate. </div>
                                </div>

                                <hr class="mb-4">
                                <button class="btn btn-primary btn-lg btn-block w-100" type="submit">Add
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="add-product-offer" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="add-product-offerLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="order-md-1">
                            <h4 class="mb-3">Billing address</h4>

                            <form class="needs-validation" method="post" id="add-product-offer-form" novalidate="">
                                <div class="form-group mb-3">
                                    {{!-- <label for="exampleFormControlSelect1">Example select</label> --}}
                                    <select class="form-control bg-light" id="products" name="product">
                                        <option selected disabled>Select product....</option>
                                        {{#each products}}
                                        <option value="{{this._id}}">{{this.product_name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control bg-light" id="percentage"
                                        placeholder="Enter offer in percentage" name="percentage" value="" required="">
                                    <div class="invalid-feedback"> Please enter product offer. </div>
                                </div>
                                <div class="mb-3">
                                    <label for="expirydate">Expiry Date</label>
                                    <input type="date" class="form-control bg-light" id="expirydate"
                                        placeholder="expirydate" name="expirydate" value="" required="">
                                    <div class="invalid-feedback"> Please enter expirydate. </div>
                                </div>

                                <hr class="mb-4">
                                <button class="btn btn-primary btn-lg btn-block w-100" type="submit">Add
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>